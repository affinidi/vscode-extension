{
  "name": "affinidi-vscode",
  "publisher": "affinidi",
  "displayName": "Affinidi",
  "description": "Fast-track your Web 2.0 to Web 3.0 journey with Affinidi",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:affinidi.signup",
    "onCommand:affinidi.login",
    "onCommand:affinidi.logout",
    "onCommand:affinidi.me",
    "onCommand:affinidi.createProject",
    "onCommand:affinidi.codegen.sendVcOfferToEmail",
    "onAuthenticationRequest:AffinidiOTP",
    "onView:affinidiExplorer",
    "onCommand:affinidiExplorer.refresh",
    "onCommand:affinidi.openMarkDown",
    "onCommand:affinidi.copyJsonURL",
    "onCommand:affinidi.copyJsonLdURL",
    "onCommand:affinidiExplorer.viewProperties",
    "onCommand:affinidiExplorer.showJsonSchema",
    "onCommand:affinidiExplorer.showJsonLdContext",
    "onCommand:affinidiExplorer.createSchema",
    "onCommand:affinidiExplorer.createIssuance",
    "onView:affinidiDevTools",
    "onCommand:affinidiDevTools.issueCredential"
  ],
  "main": "./out/main",
  "contributes": {
    "commands": [
      {
        "command": "affinidi.signup",
        "category": "Affinidi",
        "title": "Create an Account"
      },
      {
        "command": "affinidi.login",
        "category": "Affinidi",
        "title": "Sign In"
      },
      {
        "command": "affinidi.logout",
        "category": "Affinidi",
        "title": "Sign Out"
      },
      {
        "command": "affinidi.createProject",
        "category": "Affinidi",
        "title": "Create Project"
      },
      {
        "command": "affinidi.me",
        "category": "Affinidi",
        "title": "Account Details"
      },
      {
        "command": "affinidi.codegen.sendVcOfferToEmail",
        "category": "Affinidi",
        "title": "Generate a snippet for \"Send a VC offer to an email\""
      },
      {
        "command": "affinidi.codegen.getIssuanceOffers",
        "category": "Affinidi",
        "title": "Generate a snippet for \"Get Issuance offers\""
      },
      {
        "command": "affinidiExplorer.refresh",
        "title": "Refresh",
        "category": "Affinidi Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "affinidi.openMarkDown",
        "title": "About Issuance",
        "category": "Affinidi Explorer",
        "icon": "$(info)"
      },
      {
        "command": "affinidi.copyJsonURL",
        "title": "Copy JSON Schema URL",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidi.copyJsonLdURL",
        "title": "Copy JSON-LD Context URL",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidiExplorer.viewProperties",
        "title": "View Properties",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidiExplorer.showJsonSchema",
        "title": "Show JSON Schema",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidiExplorer.showJsonLdContext",
        "title": "Show JSON-LD Context",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidiExplorer.createSchema",
        "title": "Create Schema",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidiExplorer.createIssuance",
        "title": "Create Issuance",
        "category": "Affinidi Explorer"
      },
      {
        "command": "affinidiDevTools.issueCredential",
        "title": "Issuance Credential",
        "category": "Affinidi Dev Tool"
      },
      {
        "command": "affinidiExplorer.codegen.getIssuanceOffers",
        "title": "Build: Get the issuance offers",
        "category": "Affinidi Snippets"
      },
      {
        "command": "affinidiExplorer.codegen.sendVcOfferToEmail",
        "title": "Build: Send VC offers to email",
        "category": "Affinidi Snippets"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "affinidiExplorer.refresh",
          "when": "never"
        },
        {
          "command": "affinidi.openMarkDown",
          "when": "never"
        },
        {
          "command": "affinidi.copyJsonURL",
          "when": "never"
        },
        {
          "command": "affinidi.copyJsonLdURL",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.viewProperties",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.showJsonSchema",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.showJsonLdContext",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.createSchema",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.createIssuance",
          "when": "never"
        },
        {
          "command": "affinidiDevTools.issueCredential",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.codegen.getIssuanceOffers",
          "when": "never"
        },
        {
          "command": "affinidiExplorer.codegen.sendVcOfferToEmail",
          "when": "never"
        }
      ],
      "view/title": [
        {
          "command": "affinidiExplorer.refresh",
          "when": "view == affinidiExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "affinidiExplorer.refresh",
          "when": "view == affinidiExplorer && viewItem == rootSchemas || view == affinidiExplorer && viewItem == rootIssuance",
          "group": "inline"
        },
        {
          "command": "affinidi.openMarkDown",
          "when": "view == affinidiExplorer && viewItem == rootIssuance || view == affinidiExplorer && viewItem == rootSchemas",
          "group": "inline"
        },
        {
          "command": "affinidi.copyJsonURL",
          "when": "view == affinidiExplorer && viewItem == schema",
          "group": "6_copypath"
        },
        {
          "command": "affinidi.copyJsonLdURL",
          "when": "view == affinidiExplorer && viewItem == schema",
          "group": "6_copypath"
        },
        {
          "command": "affinidiExplorer.createSchema",
          "when": "view == affinidiExplorer && viewItem == rootSchemas",
          "group": "z_commands"
        },
        {
          "command": "affinidiExplorer.createIssuance",
          "when": "view == affinidiExplorer && viewItem == schema",
          "group": "z_commands"
        },
        {
          "command": "affinidiExplorer.viewProperties",
          "when": "view == affinidiExplorer && viewItem == project || view == affinidiExplorer && viewItem == issuance || view == affinidiExplorer && viewItem == schema",
          "group": "z_commands"
        },
        {
          "command": "affinidiExplorer.showJsonSchema",
          "when": "view == affinidiExplorer && viewItem == schema",
          "group": "z_commands"
        },
        {
          "command": "affinidiExplorer.showJsonLdContext",
          "when": "view == affinidiExplorer && viewItem == schema",
          "group": "z_commands"
        },
        {
          "command": "affinidiExplorer.codegen.getIssuanceOffers",
          "when": "view == affinidiExplorer && viewItem == issuance",
          "group": "1"
        },
        {
          "command": "affinidiExplorer.codegen.sendVcOfferToEmail",
          "when": "view == affinidiExplorer && viewItem == schema",
          "group": "1"
        }
      ]
    },
    "views": {
      "affinidi": [
        {
          "id": "affinidiExplorer",
          "name": "Resources"
        },
        {
          "id": "affinidiDevTools",
          "name": "Developer Tools"
        },
        {
          "id": "affinidiSnippets",
          "name": "Snippets"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "affinidi",
          "title": "Affinidi",
          "icon": "media/affinidi-logo.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "affinidiDevTools",
        "contents": "Schemas allow you to build powerful workflows based on issued verifiable credentials.\n[Create Schema](command:affinidiExplorer.createSchema)\nBuild a rule that checks validity of verifiable credentials against one or more schemas\n[Create Rule](command:affinidiTools3)\nIssue credentials for them to claim and add to their wallet\n[Issue Credentials](command:affinidiDevTools.issueCredential)"
      }
    ],
    "walkthroughs": [
      {
        "id": "affinidi-walkthrough",
        "title": "Get started with Affinidi",
        "featuredFor": [],
        "description": "Get to know the tools that will accelerate your journey into privacy-preserving application development",
        "steps": [
          {
            "id": "createSchema",
            "title": "Create Schema",
            "description": "Easily generate a schema for a verifiable credential.\n[Create Schema](command:getting-started.createSchema)",
            "media": {
              "image": "media/affinidi-logo.svg",
              "altText": "Affinidi"
            },
            "completionEvents": [
              "onCommand:getting-started.createschema"
            ]
          },
          {
            "id": "createRule",
            "title": "Create Rules",
            "description": "Create powerful rules that match verifiable credentials\n[Create Rule](command:getting-started.createRule)",
            "media": {
              "image": "media/affinidi-logo.svg",
              "altText": "Affinidi"
            },
            "completionEvents": [
              "onSettingChanged:getting-started.sampleSetting"
            ]
          }
        ]
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      }
    ],
    "authentication": [
      {
        "id": "AffinidiOTP",
        "label": "Affinidi OTP"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run clean && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rimraf ./out",
    "dev": "nodemon --watch src/ -x 'npm run compile'"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/glob": "^8.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@types/source-map-support": "^0.5.6",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "deep-equal-in-any-order": "^2.0.0",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^10.0.0",
    "nock": "^13.2.9",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.1.0",
    "nanoid": "^3.3.4",
    "node-fetch": "^2.6.7",
    "path": "^0.12.7"
  }
}
